<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>oxt</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>dist/WollMuxBar.jar</source>
			<destName>WollMux.uno.jar</destName>
		</file>
		<file>
			<source>misc/buildinfo</source>
			<filtered>true</filtered>
		</file>
		<file>
			<source>oxt/description.xml</source>
			<filtered>true</filtered>
		</file>
		<file>
			<source>oxt/wollmux.png</source>
			<outputDirectory>icons</outputDirectory>
		</file>
		<file>
			<source>oxt/META-INF/manifest_AOO.xml</source>
			<destName>META-INF/manifest.xml</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>oxt</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>*.xcu</include>
				<include>*.rdb</include>
				<include>help/component*.txt</include>
			</includes>
			<excludes>
				<exclude>META-INF/manifest.xml</exclude>
				<exclude>Addons.xcu</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>.</directory>
			<includes>
				<include>basic/**/*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>